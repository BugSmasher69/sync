{
    "name": "electron-app",
    "version": "1.0.0",
    "description": "Desktop clipboard sync application",
    "main": "dist/main.js",
    "scripts": {
        "start": "tsc && electron .",
        "dev": "nodemon --exec npm start",
        "build": "tsc && electron-builder",
        "package": "electron-builder build --win --publish never"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.31.0",
        "clipboardy": "^3.0.0",
        "crypto-js": "^4.1.1",
        "electron-log": "^4.4.8",
        "electron-store": "^8.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "shared": "1.0.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/crypto-js": "^4.1.1",
        "@types/node": "^18.16.19",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@types/uuid": "^9.0.2",
        "electron": "^25.3.0",
        "electron-builder": "^24.4.0",
        "nodemon": "^3.0.1",
        "typescript": "^5.1.6"
    },
    "build": {
        "appId": "com.clipboard.sync",
        "productName": "ClipSync",
        "files": [
            "dist/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "resources",
            "output": "release"
        },
        "win": {
            "target": "nsis",
            "icon": "resources/icon.ico"
        }
    }
}