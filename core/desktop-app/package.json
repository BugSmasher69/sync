{
  "name": "clipboard-sync-desktop",
  "version": "1.0.0",
  "description": "End-to-end encrypted clipboard sync application",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-react\" \"npm run start-electron\"",
    "start-react": "react-scripts start",
    "start-electron": "wait-on http://localhost:3000 && electron .",
    "build": "react-scripts build",
    "build-electron": "electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "author": "BugSmasher69",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.20.0",
    "clipboardy": "^2.3.0",
    "crypto-js": "^4.1.1",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^25.0.0",
    "electron-builder": "^23.6.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.bugsmasher69.clipboardsync",
    "productName": "Clipboard Sync",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  }
}