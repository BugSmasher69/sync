{
  "name": "clipboard-sync-desktop",
  "version": "1.0.0",
  "description": "End-to-end encrypted clipboard sync application",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env \"npm run start-react & npm run start-electron-quick\"",
    "start-react": "cross-env BROWSER=none FAST_REFRESH=true react-scripts start",
    "start-electron": "wait-on http://localhost:3001 && electron .",
    "start-electron-quick": "cross-env ELECTRON_START_URL=http://localhost:3001 electron .",
    "build": "cross-env GENERATE_SOURCEMAP=false react-scripts build",
    "build-electron": "electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject"
  },
  "author": "BugSmasher69",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.20.0",
    "buffer": "^6.0.3",
    "clipboardy": "^2.3.0",
    "crypto-browserify": "^3.12.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env-shell": "^7.0.3",
    "electron": "^25.0.0",
    "electron-builder": "^23.6.0",
    "electron-reload": "^2.0.0-alpha.1",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react-app-rewired": "^2.2.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.bugsmasher69.clipboardsync",
    "productName": "Clipboard Sync",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  }
}